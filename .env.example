# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Get token from @BotFather: https://t.me/BotFather

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Get API key from: https://platform.openai.com/api-keys

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./voice_journal.db
# For development: SQLite (default)
# For production: postgresql+asyncpg://user:password@localhost/dbname

# Application Settings
ENVIRONMENT=development
# Options: development, production

LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security
ALLOWED_USER_IDS=
# Comma-separated list of Telegram user IDs allowed to use the bot
# Example: 123456789,987654321
# Leave empty to allow all users (NOT recommended for production)

# Whisper Configuration
WHISPER_MODEL=whisper-1
# OpenAI Whisper model to use

MAX_VOICE_FILE_SIZE_MB=20
# Maximum size of voice file in megabytes
